@model IEnumerable<BeiBei.Models.CollectorInfo>
@{
    ViewBag.Title = "ShowCollector";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<h2>ShowCollector</h2>

<div id="wrapper">
    <!-- /. NAV SIDE  -->
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="page-header">
                        信息<small>管理</small>
                    </h1>
                </div>
            </div>
            <!-- /. ROW  -->
            <div class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            回收员信息
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>员工编号</th>
                                            <th>员工姓名</th>
                                            <th>员工头像</th>
                                            <th>管理区域</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr class="odd gradeX">
                                                <td>@item.CID</td>
                                                <td>@item.Cname</td>
                                                <td>@item.Cimage</td>
                                                <td class="center">@item.Clocation</td>
                                                <td class="center"><button style="width:80px;height:25px;" onclick="location.href='/BeiBei/GetDeal?cid='+@item.CID">业绩查看</button></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!--End Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            用户信息
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>姓名</th>
                                            <th>联系电话</th>
                                            <th>详细地址</th>
                                            <th>交易次数</th>
                                            <th>交易总金额</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.user)
                                        {
                                            <tr class="odd gradeX">
                                                <td>@item.Uname</td>
                                                <td>@item.Utel</td>
                                                <td>@item.Uaddr</td>
                                                <td class="center">@item.Unum</td>
                                                <td class="center">@item.Udealmoney</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>

</div>