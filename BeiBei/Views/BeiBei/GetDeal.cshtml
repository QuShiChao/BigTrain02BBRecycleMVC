@model IEnumerable<BeiBei.Models.DealRecord>
@{
    ViewBag.Title = "GetDeal";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<h2>GetDeal</h2>

<div id="wrapper">
    <!-- /. NAV SIDE  -->
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="page-header">
                        交易 <small>记录</small>
                    </h1>
                </div>
            </div>
            <!-- /. ROW  -->
            <div class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            交易记录
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>订单号</th>
                                            <th>回收员</th>
                                            <th>用户名</th>
                                            <th>交易商品</th>
                                            <th>交易金额</th>
                                            <th>交易时间</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr class="odd gradeX">
                                                <td>@item.Oid</td>
                                                <td>@item.Cname</td>
                                                <td>@item.Uname</td>
                                                <td class="center">@item.Oname</td>
                                                <td class="center">@item.Dmoney</td>
                                                <td class="center">@item.Dtime</td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!--End Advanced Tables -->
                </div>
            </div>
        </div>
    </div>

</div>